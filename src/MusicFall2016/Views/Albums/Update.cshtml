@model MusicFall2016.Models.Album
@{
    ViewData["Title"] = "Update an Album:";
}
<h3>Update Album:</h3>
<form asp-action="Update" method="post">
    <input type="hidden" asp-for="AlbumID" value="@Model.AlbumID" />
    <input type="text" asp-for="Title" value="" />
    <span asp-validation-for="Title"></span>
    <select asp-for="ArtistID" asp-items="ViewBag.ArtistList" name="ArtistID"></select>
    <span asp-validation-for="ArtistID"></span>
    <select asp-for="GenreID" asp-items="ViewBag.GenreList" name="GenreID"></select>
    <span asp-validation-for="GenreID"></span>
    <input type="text" asp-for="Price" value="" />
    <span asp-validation-for="Price"></span>

    <button>Update album</button>


</form>

<form action="Details" method="get">
    <button>Go back</button>
</form>
